#include<stdio.h>
# define MAX 5
void display(int stack[],int *top)
{
   if(*top==-1)
   	printf("The stack is empty");
   else
     {
       for(int i=0;i<=*top;i++){
       		printf("%d\n",stack[i]);
              }
      }
}
void push(int stack[],int *top,int value)
{
    
     if(*top==MAX-1)
 
        printf("The stack is full\n");
     
     else
     {
      
       stack[++(*top)]=value;
       printf("%d value is pushed\n",stack[*top]);
      
     }     
     
}
void pop(int stack[],int *top)
{
     if(*top==-1)
     	printf("Stack is empty");
     else
    {
    printf("%d is poped",stack[*top]);
     --(*top);
     }
void peak(int stack[],int*top)
{
    if(*top==-1)
           printf("The stack is empty");
    else
        printf("The top is %d",stack[*top];
}
int main()
{
   int stack[MAX];
   int choice=0,value;
   int top=-1;
   while(choice!=5)
   {
     printf("|---Here your choice---|\n");
     printf("|---1.push-------------|\n");
     printf("|---2.pop--------------|\n");
     printf("|---3.peak-------------|\n");
     printf("|---4.Display----------|\n");
     printf("|---5.Exit-------------|\n");
     printf("Enter your choice:");
     scanf("%d",&choice);
     switch(choice)
     {
       case 1:
       		printf("enter the element to be push:");
       		scanf("%d",&value);
       		push(stack,&top,value);
       		break;
       case 2:   
                pop(stack,&top);
       		break;
       case 3:
                peak(stack,&top);
       		break;
       case 4:
       		display(stack,&top);
       		break;
       case 5:
           printf("program is existed");
           break;
     }
     }
     return 0;
}
